@model RailwayBooking.Models.UserDashboard

@{
    ViewBag.Title = "SelectSeat_Type";
}

<h2>SelectSeat_Type</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>UserDashboard</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.Label("Seat_Type_Name")
    <datalist id="SeatTypeList">
        @foreach (var item in (List<string>)TempData["Seat_Type_Name"] ?? new List<string>())
        {
            <option>@item</option>
        }
    </datalist>
    <input type="text" name="selected_seat_type_name" required="" list="SeatTypeList" />
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
