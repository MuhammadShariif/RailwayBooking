@model RailwayBooking.Models.UserDashboard

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>UserDashboard</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.Label("Train")
    <datalist id="TrainList">
        @foreach (var item in (List<string>)TempData["Train_Name"])
        {
            <option>@item</option>
        }
    </datalist>
    <input type="text" name="Train" required="" list="TrainList" />
    <br />
    @Html.Label("Trip")
    <datalist id="TripList">
        @foreach (var item in (List<int>)TempData["Trip_ID"])
        { 
            <option>@item</option>
        }
    </datalist>
    <input type="text" name="Trip" required="" list="TripList" />
    <br />
    @Html.Label("Coach")
    <datalist id="CoachList">
        @foreach (var item in ((List<int?>)TempData["Coach_No"]).Where(x => x.HasValue))
        {
            <option>@item</option>
        }
    </datalist>
    <input type="text" name="Coach" required="" list="CoachList" />
    <br />
    @Html.Label("Seat")
    <datalist id="SeatList">
        @foreach (var item in (List<int>)TempData["Seat_No"])
        {
            <option>@item</option>
        }
    </datalist>
    <input type="text" name="SeatList" required="" list="SeatList" />
    <br />
    @Html.Label("Seat_Type")
    <datalist id="Seat_TypeList">
        @foreach (var item in (List<string>)TempData["Seat_Type"])
        {
            <option>@item</option>
        }
    </datalist>
    <input type="text" name="Seat_Type" required="" list="Seat_TypeList" />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
