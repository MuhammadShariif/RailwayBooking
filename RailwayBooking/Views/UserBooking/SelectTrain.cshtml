@model RailwayBooking.Models.UserDashboard

@{
    ViewBag.Title = "SelectTrain";
}

<h2>SelectTrain</h2>

@using (Html.BeginForm("SelectTrain", "UserBooking", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>UserDashboard</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.Label("Train")
    <datalist id="TrainList">
        @foreach (var item in (List<string>)TempData["Train_Name"])
        {
            <option>@item</option>
        }
    </datalist>
    <input type="text" name="selected_train" required="" list="TrainList" />
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Next" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
