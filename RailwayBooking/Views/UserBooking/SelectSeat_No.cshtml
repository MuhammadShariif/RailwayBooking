@model RailwayBooking.Models.UserDashboard

@{
    ViewBag.Title = "SelectSeat_No";
}

<h2>SelectSeat_No</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>UserDashboard</h4>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.Label("Seat_No")
    <br />
    <datalist id="SeatList">
        @foreach (var item in (List<int?>)TempData["Coach_No"] ?? new List<int?>())
        {
            <option>@item</option>
        }
    </datalist>
    <input type="text" name="selected_seat_no" required="" list="SeatList" />
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
