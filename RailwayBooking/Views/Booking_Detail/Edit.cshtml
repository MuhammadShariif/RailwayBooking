        @Html.HiddenFor(model => model.Seat_No)

        @Html.HiddenFor(model => model.Coach_ID)

        <div class="form-group">
            @Html.LabelFor(model => model.Booking_Price, htmlAttributes: new { @class = "control-label col-md-2" })
